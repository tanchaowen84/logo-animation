{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@/content/*": ["./content/*"],
      "@/public/*": ["./public/*"],
      "content-collections": ["./.content-collections/generated"],
      "@runtime": ["./remotion/runtime/index.ts"],
      "@runtime/*": ["./remotion/runtime/*"],
      "remotion": ["./node_modules/.pnpm/remotion@4.0.370_react-dom@19.0.0_react@19.0.0__react@19.0.0/node_modules/remotion/dist/cjs/index.d.ts"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
